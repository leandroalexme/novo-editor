{
  "name": "polotno",
  "version": "2.24.0",
  "description": "Design Editor Framework",
  "author": "Anton Lavrenov",
  "keywords": [
    "polotno",
    "canvas",
    "photo editor",
    "design editor"
  ],
  "dependencies": {
    "@blueprintjs/core": "5.19.0",
    "@blueprintjs/select": "5.3.20",
    "@meronex/icons": "^4.0.0",
    "cssom": "^0.5.0",
    "fast-json-patch": "^3.1.1",
    "functions-have-names": "^1.2.3",
    "gifuct-js": "^2.1.2",
    "gradient-parser": "^1.1.1",
    "konva": "^9.3.20",
    "mensch": "^0.3.4",
    "mobx": "6.13.7",
    "mobx-react-lite": "^4.1.0",
    "mobx-state-tree": "6.0.1",
    "nanoid": "3.3.4",
    "quill": "^1.3.7",
    "rasterizehtml": "^1.3.1",
    "react-color": "^2.19.3",
    "react-konva": "18.2.10",
    "react-konva-utils": "^1.1.0",
    "react-sortablejs": "6.1.4",
    "react-window": "^1.8.11",
    "sortablejs": "^1.15.6",
    "svg-round-corners": "^0.4.3",
    "swr": "^2.3.3",
    "use-image": "^1.1.4"
  },
  "targets": {
    "bundle": {
      "source": "src/polotno.bundle.tsx",
      "distDir": "lib",
      "optimize": true
    }
  },
  "main": "./polotno-app.js",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "size-limit": [
    {
      "path": "./lib/polotno-app.js",
      "limit": "395 KB"
    },
    {
      "path": "./lib/canvas/workspace.js",
      "limit": "395 KB"
    },
    {
      "path": "./lib/canvas/workspace-canvas.js",
      "limit": "395 KB"
    }
  ],
  "devDependencies": {
    "@canvas/image": "^2.0.0",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29",
    "@types/react": "^18.3.12",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/browser": "^1.6.0",
    "assert": "^2.1.0",
    "bippy": "^0.0.25",
    "buffer": "^6.0.3",
    "canvas": "^3.1.0",
    "glob": "^11.0.2",
    "jest-file-snapshot": "^0.7.0",
    "jsdom": "^26.1.0",
    "parcel": "2.13.3",
    "path-browserify": "^1.0.1",
    "pptxgenjs": "^3.12.0",
    "process": "^0.11.10",
    "punycode": "^2.3.1",
    "querystring-es3": "^0.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "size-limit": "^11.2.0",
    "skia-canvas": "^1.0.2",
    "svg-path-bounds": "^1.0.2",
    "terser": "^5.39.2",
    "ts-jest": "^29",
    "typescript": "^5.8.3",
    "uglifyjs-folder": "^3.3.0",
    "vitest": "^1.6.0",
    "webdriverio": "^8.38.2"
  },
  "homepage": "https://polotno.com/",
  "scripts": {
    "start": "parcel index.html --no-source-maps",
    "clean": "rm -rf ./lib && rm -rf ./.parcel-cache",
    "tsc": "tsc --outDir ./lib --removeComments --sourceMap false --module CommonJS || echo \"tsc faild for some file(s).\"",
    "minify": "node minify.js",
    "build": "npm run clean && npm run tsc && npm run add_version && npm run minify && npm run build:bundle && cp ./package.json ./lib && cp ./README.md ./lib && cp ./LICENSE.md ./lib && npm run remove-test-from-lib",
    "remove-test-from-lib": "find . -name \"*.test.js\" -type f -exec rm -f {} \\;",
    "add_version": "sed -i.bak 's/SDK_VERSION/'$npm_package_version'/' ./lib/utils/validate-key.js && rm -f ./lib/utils/validate-key.js.bak",
    "build:bundle": "parcel build && rm -f ./lib/polotno.bundle.js.map",
    "size": "npm run build && size-limit",
    "test": "vitest",
    "test:watch": "jest --watch"
  },
  "license": "SEE LICENSE IN LICENSE.md"
}
